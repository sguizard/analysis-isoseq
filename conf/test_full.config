/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running full-size tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a full size pipeline test.

    Use as follows:
        nextflow run nf-core/isoseq -profile test_full,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Full test profile'
    config_profile_description = 'Full test dataset to check pipeline function'

    // Input data for full size test
    input           = 'https://raw.githubusercontent.com/sguizard/test-datasets/isoseq/samplesheet_full.csv'
    primers         = 'https://raw.githubusercontent.com/sguizard/test-datasets/isoseq/testdata/primers_complete.fasta'
    fasta           = 'http://ftp.ensembl.org/pub/release-106/fasta/sus_scrofa/dna/Sus_scrofa.Sscrofa11.1.dna.toplevel.fa.gz'
    gtf             = 'http://ftp.ensembl.org/pub/release-106/gtf/sus_scrofa/Sus_scrofa.Sscrofa11.1.106.gtf.gz'
    rq              = 0.9
    chunk           = 100
    five_prime      = 100
    splice_junction = 10
    three_prime     = 100
    capped          = true
    ultra           = true

    // // Genome references
    // genome = 'R64-1-1'
}
